<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.booking"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="LoginActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="RegisterActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="ManageActivity" android:launchMode="singleInstance"></activity>
        <activity android:name="CommonActivity"></activity>
        <activity android:name="ReserveActivity"></activity>
        <activity android:name="BookingSocketActivity"></activity>
    </application>

</manifest>
