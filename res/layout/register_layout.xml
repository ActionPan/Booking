<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2d3f6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_top"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="只能一般用户注册"
            android:textColor="#babbbb"
            android:textSize="30sp" />
       
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_center"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="用户名:"
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:background="@null" >
        <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_center"
        android:minHeight="50dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text=" 密  码 :"
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@null"  />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_bottom"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="确认密码:"
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/password1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@null"  />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:minHeight="50dp" >

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textColor="#a6a6a6"
            android:background="@drawable/corners_left_register"
            android:text="注册" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:textColor="#a6a6a6"
            android:background="@drawable/corners_right_register"
            android:text="返回" />
    </LinearLayout>
    
</LinearLayout>