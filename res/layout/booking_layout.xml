<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
     <LinearLayout 
        android:id="@+id/count_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BFFF"
        android:gravity="center_vertical"
        android:padding="3dp"
        android:orientation="horizontal"
        >
        <ImageView 
            android:id="@+id/count_image1"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/btn"        	
            />

        <TextView
            android:id="@+id/count_textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.60"
            android:gravity="center"
            android:text="预约预览"
            android:textSize="20dp" />
        <ImageView 
            android:id="@+id/count_image2"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/nowplaying"        	
            />
        

    </LinearLayout>
    
     

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:layout_marginTop="40dp"
         android:gravity="center" >
       

         <TextView
             android:id="@+id/total"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="15dp"
             android:text="  该餐厅可供预约号总数是" />
         
         <TextView
             android:id="@+id/reserve_sum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#FFEE00"
             android:textSize="40dp"
             android:text=" 30 " />
         
     </LinearLayout>
     
      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:gravity="center" >
       

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="15dp"
             android:text="  目前已有预约人数" />
         
         <TextView
             android:id="@+id/reserved_sum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#FFEE00"
             android:textSize="40dp"
             android:text=" 10 " />
         
     </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="50dp"
           >

          <Button
              android:id="@+id/reserve_lobby"
              android:layout_width="120dp"
              android:layout_height="80dp"
              android:background="@drawable/corners_left_register"
              android:textColor="#FFFFFF"
              android:text="大堂预约" />
           <Button
              android:id="@+id/reserve_room"
              android:layout_width="120dp"
              android:layout_height="80dp"
              android:textColor="#FFFFFF"
              android:background="@drawable/corners_right_register"
              android:text="房间预约" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="240dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center" >

          <Button
              android:id="@+id/recheck"
              android:layout_width="240dp"
              android:layout_height="80dp"
              android:background="@drawable/corners_login"
              android:text="查看" />

      </LinearLayout>
     
</LinearLayout>
