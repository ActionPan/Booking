<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2d3f6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_top"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text=" 类  别 :"
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_pre"
            android:layout_toRightOf="@+id/tv_pre"
            android:orientation="horizontal" >

            
            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="40dp"
                android:layout_height="40dp"              
                android:textColor="#babbbb"
                android:state_focused="true"
                android:layout_marginLeft="20dp"
                android:button="@null" 
                android:background="@drawable/radio1" />
            
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textColor="#babbbb"
                 android:state_focused="true"
                 android:layout_marginLeft="15dp"
                android:button="@null" 
                android:background="@drawable/radio" />
        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_center"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="用户名:"
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/login_username"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:background="@null" >
        <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_center"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text=" 密  码 :"
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@null"  />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_bottom"
        android:minHeight="45dp" >

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="记住密码"
            android:textColor="#babbbb"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="50dp" >

        <Button
            android:id="@+id/login_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:textColor="#a6a6a6"
            android:background="@drawable/corners_login"
            android:text="登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <Button
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColor="#a3a4a6"
            android:background="@null"
            android:text="注册新用户" />

    </LinearLayout>

</LinearLayout>