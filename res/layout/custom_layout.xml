<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners_bg_top"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=" 大堂预约总数："
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/culobby_sum"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:background="@null" >
        <requestFocus />
        </EditText>
    </RelativeLayout>
    
       <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_center"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=" 房间预约总数："
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/curoom_sum"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:background="@null" >
        
        </EditText>
    </RelativeLayout>
    
          <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_center"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=" 预约启动时间："
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>
        
        <EditText
            android:id="@+id/custart_time"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:background="@null" >
        
        </EditText>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_bottom"
        android:minHeight="45dp" >

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text=" 预约结束时间："
            android:textColor="#babbbb"
            android:textSize="20sp" >
        </TextView>

        <EditText
            android:id="@+id/cuover_time"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/tv_pre"
            android:ems="10"
            android:background="@null" >
        
        </EditText>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:minHeight="50dp" >

        <Button
            android:id="@+id/cuaction"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/corners_left_register"
            android:text="执行" />
        <Button
            android:id="@+id/cuclean"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/corners_right_register"
            android:text="清空" />
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>